<Page x:Class="specify_client.StartButtons"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:specify_client"
        mc:Ignorable="d"
        Title="Specify" 
        Width="800"
        Height="400"
        MaxWidth="800"
        MaxHeight="400"
        Background="#232731">

    <!-- Define the Grids -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>

        <Grid Grid.RowSpan="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>

        <Frame x:Name="Buttons" 
               Grid.RowSpan="5"
               NavigationUIVisibility="Hidden"/>

        <StackPanel Grid.Row="1" Grid.RowSpan="3" Height="35" Margin="0,139,0,0" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment = "Center" 
                        VerticalAlignment = "Center">
                <TextBlock TextWrapping="Wrap" 
                           Text="This tool gathers information about your computer. " 
                           FontFamily="Consolas" Foreground="White"
                           HorizontalAlignment = "Center" 
                           VerticalAlignment = "Center"/>
            </StackPanel>

            <TextBlock TextWrapping="Wrap" 
                           Text="It does not collect any private information other than your username, which you can redact." 
                           FontFamily="Consolas" Foreground="White"
                           HorizontalAlignment = "Center" 
                           VerticalAlignment = "Bottom"/>
        </StackPanel>

        <!-- Start Button -->

        <StackPanel Grid.Row="3" Grid.RowSpan="1">

            <StackPanel Orientation="Horizontal">
            </StackPanel>

            <Button x:Name = "StartButton" 
                              Content = "Start App"
                              FontSize="16"
                              FontWeight="Medium"
                              Click="StartAction"
                              Background="#3b4252"
                              Foreground="White">

                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="TextElement.FontFamily"
                            Value="Fonts/AldoTheApache.ttf #Aldo The Apache"/>
                        <Setter Property="Cursor"
                                Value="Hand"/>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#3b4252"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Width="100"
                                Height="35"
                                CornerRadius="16"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>

            </Button>

        </StackPanel>

        <!-- Toggle Buttons -->

        <StackPanel Grid.Row="4" Grid.RowSpan="1" Margin="0,0,469,0">

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right" Height="50">
                <ToggleButton x:Name = "Username" 

                              FontSize="12"
                              FontWeight="Medium"
                              Checked = "UsernameOn" 
                              Unchecked = "UsernameOff">

                    <TextBlock Text="Remove Username"
                               TextWrapping="Wrap"
                               TextAlignment="Center" Padding="20,0,20,0"/>

                    <ToggleButton.Style>
                        <Style TargetType="{x:Type ToggleButton}">
                            <Setter Property="TextElement.FontFamily"
                            Value="Bahnschrift SemiBold SemiCondensed"/>
                            <Setter Property="Cursor"
                                Value="Hand"/>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                     Value="True">
                                    <Setter Property="Background"
                                        Value="#3b4252"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>

                    <ToggleButton.Template>
                        <ControlTemplate TargetType="{x:Type ToggleButton}">
                            <Border Width="100"
                                Height="35"
                                CornerRadius="16"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </ToggleButton.Template>

                </ToggleButton>

            </StackPanel>

        </StackPanel>

        <StackPanel Grid.Row="4" Grid.RowSpan="1" Margin="349,0,350,0">

            <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Left" Height="50">
                <ToggleButton x:Name = "UploadToggle" 
                    Content = "Don't Upload"
                    Checked = "UploadOn" 
                    Unchecked = "UploadOff"
                    FontSize="14"
                    FontWeight="Medium">

                    <ToggleButton.Style>
                        <Style TargetType="{x:Type ToggleButton}">
                            <Setter Property="TextElement.FontFamily"
                            Value="Bahnschrift SemiBold SemiCondensed"/>
                            <Setter Property="Cursor"
                                Value="Hand"/>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                    Value="True">
                                    <Setter Property="Background"
                                        Value="#3b4252"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>

                    <ToggleButton.Template>
                        <ControlTemplate TargetType="{x:Type ToggleButton}">
                            <Border Width="100"
                                Height="35"
                                CornerRadius="16"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </ToggleButton.Template>

                </ToggleButton>

            </StackPanel>

        </StackPanel>
        <StackPanel Grid.Row="4" Grid.RowSpan="1" Margin="466,0,166,0">

            <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Left" Height="50">
                <ToggleButton x:Name = "OneDriveToggle" 
                    Checked = "OneDriveOn" 
                    Unchecked = "OneDriveOff"
                    FontSize="12"
                    FontWeight="Medium">

                    <TextBlock Text="Redact Commercial OneDrive"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>

                    <ToggleButton.Style>
                        <Style TargetType="{x:Type ToggleButton}">
                            <Setter Property="TextElement.FontFamily"
                            Value="Bahnschrift SemiBold Condensed"/>
                            <Setter Property="Cursor"
                                Value="Hand"/>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                    Value="True">
                                    <Setter Property="Background"
                                        Value="#3b4252"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>

                    <ToggleButton.Template>
                        <ControlTemplate TargetType="{x:Type ToggleButton}">
                            <Border Width="100"
                                Height="35"
                                CornerRadius="16"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </ToggleButton.Template>

                </ToggleButton>

            </StackPanel>

        </StackPanel>

        <StackPanel Grid.Row="4" Grid.RowSpan="3" Margin="0,50,0,0">
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment = "Left" 
                        VerticalAlignment = "Bottom">

                <TextBlock TextWrapping="Wrap" 
                           Text="Made by the Specify Team!" FontFamily="Consolas" Height="30" Margin="5,30,0,0" Foreground="White"/>

            </StackPanel>
        </StackPanel>

    </Grid>

</Page>
    